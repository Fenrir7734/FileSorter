<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="inputHBox" alignment="CENTER" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fenrir.filesorter.controllers.input.DimensionInputController">
   <children>
      <TextField fx:id="widthInputField" prefHeight="30.0" prefWidth="112.0" promptText="1920" HBox.hgrow="ALWAYS" />
      <Label prefHeight="30.0" text="✕" HBox.hgrow="ALWAYS">
         <font>
            <Font size="17.0" />
         </font>
      </Label>
      <TextField fx:id="heightInputField" prefHeight="30.0" prefWidth="112.0" promptText="1080" />
      <Button mnemonicParsing="false" onAction="#deleteInputContainer" prefHeight="30.0" prefWidth="30.0" text="✕" HBox.hgrow="ALWAYS">
         <font>
            <Font size="18.0" />
         </font>
         <padding>
            <Insets bottom="-5.0" left="-5.0" right="-5.0" top="-5.0" />
         </padding>
      </Button>
   </children>
</HBox>
