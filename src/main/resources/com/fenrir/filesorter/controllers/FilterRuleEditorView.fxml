<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fenrir.filesorter.controllers.FilterRuleEditorController">
   <children>
      <TabPane fx:id="ruleEditorTabPane" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
            <Tab fx:id="ruleBuilderTab" text="Rule builder">
                <content>
                    <VBox spacing="20.0">
                        <HBox fx:id="ruleBuilderHBox" alignment="CENTER" prefHeight="40.0" spacing="10.0">
                            <children>
                                <ComboBox fx:id="actionComboBox" prefHeight="30.0" prefWidth="173.0" visibleRowCount="20" />
                                <Label text="if" />
                                <ComboBox fx:id="providerComboBox" prefHeight="30.0" prefWidth="173.0" visibleRowCount="20" />
                                <ComboBox fx:id="predicateComboBox" prefHeight="30.0" prefWidth="173.0" visibleRowCount="20" />
                            </children>
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin>
                        </HBox>
                     <VBox fx:id="inputContainer" alignment="CENTER" spacing="10.0" />
                     <Button mnemonicParsing="false" onAction="#addInputField" prefHeight="30.0" prefWidth="30.0" text="+" />
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                    </VBox>
                </content>
            </Tab>
            <Tab fx:id="expressionEditorTab" closable="false" text="Expression editor">
                <content>
                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <CheckBox fx:id="editExpressionCheckBox" mnemonicParsing="false" />
                        <TextField fx:id="expressionTextField" disable="true" prefWidth="500.0">
                        <HBox.margin>
                           <Insets right="18.0" />
                        </HBox.margin></TextField>
                    </HBox>
                </content>
            </Tab>
        </tabs>
      </TabPane>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="40.0">
         <children>
            <Button mnemonicParsing="false" onAction="#confirm" prefHeight="30.0" prefWidth="100.0" text="Confirm" />
            <Button mnemonicParsing="false" onAction="#cancel" prefHeight="30.0" prefWidth="100.0" text="Cancel" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
